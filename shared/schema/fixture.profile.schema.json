{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schema/fixture.profile.schema.json",
  "title": "Fixture Profile",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "manufacturer": { "type": "string" },
    "model": { "type": "string" },
    "mode": { "type": "string" },
    "resolution": { "type": "string", "enum": ["8bit", "16bit"] },
    "channels": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "index": { "type": "integer", "minimum": 1, "maximum": 512 },
          "name": { "type": "string" },
          "attr": { "type": "string" },
          "merge": { "type": "string", "enum": ["LTP", "HTP"] },
          "resolution": { "type": "string", "enum": ["8bit", "16bit"] },
          "coarse_index": { "type": "integer", "minimum": 1, "maximum": 512 },
          "fine_index": { "type": "integer", "minimum": 1, "maximum": 512 }
        },
        "required": ["index", "attr"],
        "additionalProperties": true
      }
    },
    "defaults": { "type": "object" }
  },
  "required": ["id", "channels"],
  "additionalProperties": true
}

