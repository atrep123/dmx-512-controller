{
  "name": "dmx-512-controller",
  "version": "1.0.0",
  "description": "Modular DMX-512 lighting and motion control system",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/nodes/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspace=packages/android-app",
    "test": "npm test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "android-app:dev": "npm run dev --workspace=packages/android-app",
    "android-app:build": "npm run build --workspace=packages/android-app",
    "server:dev": "npm run dev --workspace=packages/server",
    "server:start": "npm start --workspace=packages/server",
    "protocol:build": "npm run build --workspace=packages/protocol"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atrep123/dmx-512-controller.git"
  },
  "keywords": [
    "dmx",
    "dmx-512",
    "lighting",
    "art-net",
    "sacn",
    "e131",
    "stage-lighting",
    "esp32",
    "arduino",
    "portenta",
    "pwa",
    "react",
    "websocket"
  ],
  "author": "atrep123",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atrep123/dmx-512-controller/issues"
  },
  "homepage": "https://github.com/atrep123/dmx-512-controller#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
